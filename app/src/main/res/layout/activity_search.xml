<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zaidi.cs480.spring.app.tutortabby.Search">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchField2"
            android:layout_below="@+id/section_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/searchBtn2"
            android:layout_toStartOf="@+id/searchBtn2"
            android:hint="Enter Search Query" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="search"
            android:text="Search"
            android:id="@+id/searchBtn2"
            android:layout_alignBottom="@+id/searchField2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->
    <ListView
        android:id="@+id/list_slidermenu_search"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/colorAccent"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/item_selector"
        android:background="@color/colorListSelectorBackground"/>



</android.support.v4.widget.DrawerLayout>
