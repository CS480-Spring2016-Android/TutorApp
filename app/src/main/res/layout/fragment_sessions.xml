<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sessions_frag">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:textSize="20dp"
                android:text="No current sessions!"
                android:id="@+id/sessions_nothing_to_show"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sessions_display"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/open_session_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:layout_below="@id/sessions_nothing_to_show"
                android:text="Open one!"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>