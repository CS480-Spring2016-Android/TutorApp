<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/AppTheme.Light.ActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_picture</item>
    </style>

    <style name="AppTheme.Light.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/colorLoginBackgroundDark</item>
    </style>
</resources>
